{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "omnivore",
  "title": "Omnivore",
  "description": "Search and save articles in your Omnivore",
  "icon": "extension-icon.png",
  "author": "aurel",
  "categories": [
    "Productivity",
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-articles",
      "title": "Search Articles",
      "description": "Search and display your articles from Omnivore",
      "mode": "view",
      "preferences": [
        {
          "name": "coloredTags",
          "title": "Colored Tags",
          "description": "Use the color of the tags defined in Omnivore in Raycast",
          "required": false,
          "type": "checkbox",
          "default": true,
          "label": "Same color as defined in Omnivore"
        },
        {
          "name": "maxItems",
          "title": "Max articles",
          "type": "dropdown",
          "default": "25",
          "data": [
            {
              "title": "25",
              "value": "25"
            },
            {
              "title": "50",
              "value": "50"
            },
            {
              "title": "100",
              "value": "100"
            },
            {
              "title": "250",
              "value": "250"
            },
            {
              "title": "500",
              "value": "500"
            }
          ],
          "description": "Max articles shown in the list. The more, the slower.",
          "required": false
        }
      ]
    },
    {
      "name": "save-article",
      "title": "Save Article",
      "description": "Save an article in your Omnivore",
      "mode": "view",
      "arguments": [
        {
          "name": "url",
          "type": "text",
          "placeholder": "https://www.raycast.com/blog/hello-world",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "title": "API Key",
      "description": "Generate an API Key in Omnivore to allow access from Raycast",
      "type": "password",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.57.0",
    "@raycast/utils": "^1.9.0",
    "date-fns": "^2.30.0",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "valibot": "^0.12.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.5",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-graphql-request": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@raycast/eslint-config": "1.0.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "postinstall": "npm run generate",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "generate": "graphql-codegen",
    "prebuild": "npm run generate",
    "build": "ray build -e dist",
    "predev": "npm run generate",
    "dev": "ray develop",
    "publish": "npx @raycast/api@latest publish"
  }
}
